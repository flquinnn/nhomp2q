<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/bg_main"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".managerAccount">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        app:cardCornerRadius="100dp">

        <ImageView
            android:id="@+id/user_profile_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user_profile" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhóm P2Q"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user@example.com"
        android:gravity="center"
        android:layout_gravity="center"
        android:paddingTop="5dp"/>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="20dp"/>

    <!-- Account Settings Item -->
    <LinearLayout
        android:id="@+id/account_settings_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/account_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_account"/>

        <TextView
            android:id="@+id/account_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="200dp"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/next_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24" />
    </LinearLayout>

    <!-- Change Password Item (if loginMethod) -->
    <LinearLayout
        android:id="@+id/change_password_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/change_password_icon"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_password" />

        <TextView
            android:id="@+id/change_password_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:layout_marginEnd="170dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/next_icon_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"/>
    </LinearLayout>

    <!-- Change Language Item (if loginMethod) -->
    <LinearLayout
        android:id="@+id/change_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/change_language_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_change_language" />

        <TextView
            android:id="@+id/change_language_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngôn ngữ"
            android:layout_marginEnd="198dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/next_icon_language"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"/>
    </LinearLayout>

    <!-- Change Language Item (if loginMethod) -->
    <LinearLayout
        android:id="@+id/story_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/story_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_history" />

        <TextView
            android:id="@+id/story_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử"
            android:layout_marginEnd="220dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/story_language"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"/>
    </LinearLayout>

    <!-- Change Export file Item (if loginMethod) -->
    <LinearLayout
        android:id="@+id/export_file_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/export_file_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_export_file" />

        <TextView
            android:id="@+id/export_file_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xuất CSV"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>
        <ImageView
            android:id="@+id/export_file_language"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"/>
    </LinearLayout>
    <!-- Change  Change Money Item (if loginMethod) -->
    <LinearLayout
        android:id="@+id/change_money_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/change_money_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_change_money" />

        <TextView
            android:id="@+id/change_money_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đổi tiền tệ"
            android:layout_marginEnd="200dp"
            android:layout_marginStart="10dp"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/change_money_language"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24" />
    </LinearLayout>
    <!-- Dark Mode Switch -->
    <LinearLayout
        android:id="@+id/dark_mode_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:id="@+id/dark_mode_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_dark_mode"/>

        <TextView
            android:id="@+id/dark_mode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dark Mode"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="180dp"
            android:textSize="18sp"/>

    </LinearLayout>
    <!-- Logout Button -->
    <Button
        android:id="@+id/logout_button"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginLeft="10dp"
        android:backgroundTint="@color/bg_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="14dp"/>
<!--    layout menu-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="80dp"
           android:orientation="horizontal"
            android:layout_alignParentBottom="true"
           android:gravity="center_vertical"
           android:layout_marginTop="0dp"
           android:clickable="true"
           android:background="@color/white">
           <LinearLayout
               android:id="@+id/home"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:orientation="vertical"
               android:layout_marginTop="5dp"
               android:padding="10dp"
               tools:context=".managerAccount">
               <ImageView
                   android:id="@+id/change_money_lnguage"
                   android:layout_width="40dp"
                   android:background="@android:color/transparent"
                   android:layout_height="40dp"
                   android:layout_marginLeft="14dp"
                   android:src="@drawable/ic_home"/>
               <TextView
                   android:id="@+id/change_money_txt"
                   android:layout_width="match_parent"
                   android:textAlignment="center"
                   android:layout_height="wrap_content"
                   android:text="Trang chủ"
                   android:textSize="12sp"/>

           </LinearLayout>
           <LinearLayout
               android:id="@+id/calendar"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:orientation="vertical"
               android:layout_marginTop="5dp"
               android:padding="10dp"
               tools:context=".managerAccount">
               <ImageView
                   android:id="@+id/menu_calendar"
                   android:layout_width="40dp"
                   android:background="@android:color/transparent"
                   android:layout_marginLeft="10dp"
                   android:layout_height="40dp"
                   android:src="@drawable/ic_calendar"/>
               <TextView
                   android:id="@+id/menu_text_calendar"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="16dp"
                   android:text="Lịch"
                   android:textSize="14sp"/>

           </LinearLayout>
           <LinearLayout
               android:layout_width="wrap_content"
               android:id="@+id/add_spending"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               tools:context=".managerAccount">
               <ImageView
                   android:id="@+id/menu_add_new"
                   android:background="@android:color/transparent"
                   android:layout_width="86dp"
                   android:layout_height="80dp"
                   android:src="@drawable/ic_add_new"/>

           </LinearLayout>
           <LinearLayout
               android:id="@+id/spending_layout"
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:orientation="vertical"
               android:padding="10dp"
               tools:context=".managerAccount">
               <ImageView
                   android:id="@+id/menu_spending"
                   android:layout_width="40dp"
                   android:background="@android:color/transparent"
                   android:layout_height="40dp"
                   android:layout_marginLeft="12dp"
                   android:src="@drawable/ic_spending"/>
               <TextView
                   android:id="@+id/menu_text_spending"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Phân tích"
                   android:textSize="12sp"/>

           </LinearLayout>
           <LinearLayout
               android:layout_width="80dp"
               android:layout_height="80dp"
               android:orientation="vertical"
               android:layout_marginEnd="10dp"
               android:padding="10dp">
               <ImageView
                   android:id="@+id/menu_account"
                   android:background="@android:color/transparent"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_marginLeft="10dp"
                   android:src="@drawable/ic_account"/>
               <TextView
                   android:id="@+id/menu_text_account"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Tài khoản"
                   android:textSize="12sp"/>

           </LinearLayout>
       </LinearLayout>
    </RelativeLayout>

</LinearLayout>
